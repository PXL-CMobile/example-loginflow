<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="LoginFlow.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:LoginFlow"
	xmlns:views="clr-namespace:LoginFlow.Views">

    <ShellContent
			Title="Login"
			ContentTemplate="{DataTemplate views:LoginPage}"
        Route="Login"/>

    <TabBar>
		<ShellContent
			Title="Main"
			Icon="iconblank.png"
			ContentTemplate="{DataTemplate views:MainPage}" 
            Route="Main" />
		<ShellContent
			Title="ListDetail"
			Icon="iconlistdetail.png"
			ContentTemplate="{DataTemplate views:ListDetailPage}" />
        <ShellContent
			Title="Options"
			Icon="iconblank.png"
			ContentTemplate="{DataTemplate views:OptionsPage}" />
    </TabBar>
</Shell>
